<%= form_for([:admin,@car], :html => {:multipart => true})  do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Nome %><br />
    <%= f.text_field :name %>
  </div>

  <div class="img_field">
    <%= f.file_field :image %>
  </div>


  <div class="field">
    <%= f.label :Descrição %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :Ano %><div class="warning">*somente números</div>
    <%= f.text_field :year %>
  </div>
  <div class="field">
    <%= f.label :Marca %><br />
    <%= f.text_field :brand %>
  </div>
  <div class="field">
    <%= f.label :Modelo %><br />
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :Preço %><br />
    <%= f.text_field :price %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
